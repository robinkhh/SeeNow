    ViewBag.Title = "後台管理--會員列表";
}
@Styles.Render("~/back/css")
<h2>後台管理--會員列表</h2>

<p>
    @*@Html.ActionLink("新增會員", "Registered", "Home")*@
</p>
<table class="table table-striped table-primary table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nick_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.e_mail)
