                @Html.DisplayFor(modelItem => item.validation_flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resetable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profile.profile_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role.role_desc)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.account }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.account }) |*@
                @*@Html.ActionLink("刪除", "Delete", new { id = item.account })*@
            </td>
        </tr>
    }

</table>
