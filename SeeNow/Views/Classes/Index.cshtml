@model IEnumerable<SeeNow.Models.classes>

@{
    ViewBag.Title = "班級資料表";
}

<h2>班級資料表</h2>

<p>
    @Html.ActionLink("新開班級", "Create")
</p>
<table class="table table-striped table-primary table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.class_name)
            @*老師帳號*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_name)
            @*班級名稱*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.visible)
            @*是否可見*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datetime)
            @*開班時間*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_code)
            @*班級代碼*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.users.role_id)
            @*身分編號*@
        </th>
        <th>
            項目管理
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.teacher_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.class_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.visible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.class_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.users.role_id)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.class_id }) @*|*@
            @*@Html.ActionLink("Details", "Details", new { id=item.class_id }) |*@
            @*@Html.ActionLink("刪除", "Delete", new { id=item.class_id })*@
        </td>
    </tr>
}

</table>
