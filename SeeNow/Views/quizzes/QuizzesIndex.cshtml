<table class="table" id="Tbquiz">
    <tr>
        <th>
            題目
        </th>
        <th>
            時間
        </th>
        <th>
            答案A
        </th>
        <th>
            答案B
        </th>
        <th>
            答案C
        </th>
        <th>
            答案D
        </th>

    </tr>

    @foreach (var qz in qzans)
    {
        <tr>
            <td>
                @qz.title
            </td>
            <td>
                @qz.time
            </td>
            <td>
                @qz.ans1
            </td>
            <td>
                @qz.ans2
            </td>
            <td>
                @qz.ans3
            </td>
            <td>
                @qz.ans4
            </td>
        </tr>
    }
</table>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/seenow.js"></script>
}
