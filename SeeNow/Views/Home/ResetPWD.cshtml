
@model SeeNow.Models.users

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <header class="masthead form ">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container ">

            <div class="row justify-content-center" id="login">
                <aside class="col-sm-4">
                    <div class="card">
                        <article class="card-body">
                            <h4 class="card-title text-center mb-4 mt-1">重設密碼</h4>
                            <hr>
                            <p class="text-success text-center">@ViewBag.msg</p>@*Some message goes here*@
                            @*<form>*@

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                    </div>
                                    <input name="account" value="@ViewBag.account" class="form-control" placeholder="" type="text" Readonly>
                                </div> <!-- input-group.// -->
                            </div>

                            
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                    </div>
                                    <input name="oldpassword" id="oldpassword" class="form-control" placeholder="請輸入信件給的新密碼" type="password">
                                </div> <!-- input-group.// -->
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                    </div>
                                    <input name="password" id="password" class="form-control" placeholder="請輸入新密碼，密碼長度8~20碼" type="password">
                                </div> <!-- input-group.// -->
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                    </div>
                                    <input  id="password2" class="form-control" placeholder="請再輸入一次密碼" type="password" onChange="checkPasswordMatch();">


                                </div> <!-- input-group.// -->
                                <div class="input-group">
                                    <p class="text-danger text-center" id="divCheckPasswordMatch"> </p>
                                </div>
                            </div>



                            <div class="form-group">
                                <button type="submit" class="btn btn-info btn-block" > 送出  </button>
                            </div> <!-- form-group// -->
                            @*</form>*@
                        </article>
                    </div> <!-- card.// -->
                </aside>
            </div>
           
            
        </div>
    </header>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
   <script>
       function checkPasswordMatch() {
           var password = $("#password").val();
           var confirmPassword = $("#password2").val();

           if (password != confirmPassword)
               $("#divCheckPasswordMatch").html("密碼不一樣!!");
           else
               $("#divCheckPasswordMatch").html(" ");
       }

       $(document).ready(function () {
           $("#password2").keyup(checkPasswordMatch);
       });

   </script>

}